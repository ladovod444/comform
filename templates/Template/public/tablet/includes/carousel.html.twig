 <div class=" container carousel carousel-fade slide mb-4 " data-bs-touch="true" data-bs-ride="carousel"{# data-bs-interval="true" #} id="carouselProductPage">
            {% set total_items = 2 %}

            <div class="carousel-indicators button-position justify-content-start" style="margin-left: 8%;">
            {% for i in 0..total_items %}
                <button type="button" data-bs-target="#carouselProductPage" data-bs-slide-to="{{i}}" class="{{ i == 0 ? 'active' : '' }} " aria-current="true" aria-label="Slide {{i+1}}"></button>
            {% endfor %}
            </div>

            <div class="carousel-inner rounded-4" style="height: 340px;">
           
                {% for i in 0..total_items %}
                    {% set random_item = random(1, 3) %}
                    <div class="carousel-item {{ i == 0 ? 'active' : '' }} h-100 position-relative rounded-4">
                        <img class="d-block " src="/assets/comfort/img/carousel/{{random_item}}.jpg" alt="Изображение {{ i + 1 }}">
                        <div class="carousel-caption carousel-caption-mobile carousel-caption-tablet text-light mb-5">
                            <h2 class="ms-5">Наименование товара</h2>
                            <p class="fs-6 ms-5">Описание товара </p>
                        </div>
                    </div>
            {% endfor %}
            </div>
        </div>
