
    <div class="card {# card-open #} border-0 p-2 positiom-relative">
    {% set random_item = random(1, 5) %}
    <img class="card-img-top rounded-4{#  show-card-image #}" style="height: 140px;" src="/assets/comfort/img/{{random_item}}.jpg" alt="Изображение товара {{i + 1}}">

    <div class="card-body  pb-1 px-0">
        <div class="d-flex justify-content-between">
        <h3 class="card-title" style="font-size: 12px">Товар {{i + 1}}</h3>
        <svg class="bi bi-heart-fill" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="lightgray" viewBox="0 0 16 16">
            <path fill-rule="lightgray" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314"></path>
        </svg>
        </div>
        <div class="d-flex mb-2">
            <p class="card-text m-0 me-1" style="font-size: 16px"><strong>8 500 Р.</strong></p>
            <p class="card-text text-danger" style="font-size: 8px"><del><strong>12 200 Р.</strong></del></p>
        </div>
        <div class="d-flex  justify-content-between">
            <div class="d-flex">
                {% for j in 1..4 %}
                <div class="form-check d-flex align-items-center">
                {% set random_color = ["f2f0f0", "ffe4d7", "ffd7e4", "ffe4e4", "f2f0e4"][random(0, 4)] %}
                    <input class="form-check-input" type="radio" name="flexRadioDisabled" id="RadioColorButton{{ i ~ j ~ section_number}}" aria-label="Кнопка выбора цвета" style="width:14px; height:14px; background-color:#{{random_color}};">
                    <label class="form-check-label" for="RadioColorButton{{ i ~ j ~ section_number}}"></label>
                </div>
                {% endfor %}
            </div>

            <button class="btn btn-dark d-flex p-1" aria-label="Кнопка добавления товара в корзину">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag" viewBox="0 0 16 16">
                    <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z"/>
                </svg>
            </button>
        </div>

    </div>
    </div>

