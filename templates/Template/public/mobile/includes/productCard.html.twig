 {% set totalitems = 4 %}

<section class="container pb-2">
  <div class="row ">
    <div class="col-12 pb-2">
      <div class="carousel slide"
        id="carouselProductPage"
        data-bs-wrap="true"
        >

        <div class="carousel-inner mb-2 h-100 rounded-4">

        {% for i in 0..totalitems %}
        <div class="carousel-item {{ i == 0 ? 'active' : '' }}  ">
            <img src="/assets/comfort/img/productCardImage.webp" class="w-100" alt="Изображение товара">
        </div>
        {% endfor %}
        </div>

        <div class="carousel-indicators ">
        {% for i in 0..totalitems %}
            <button type="button" class="{{ i == 0 ? 'active' : '' }} "
                aria-label="Кнопка переключения слайда"
                data-bs-target="#carouselProductPage"
                data-bs-slide-to="{{i}}">
            </button>
        {% endfor %}
        </div>

        </div>

        
    </div>
    <div class="col-12 border-bottom pb-3" style="height:max-content!important;">
      <div class="d-flex align-items-center justify-content-between">
          <h2 class="fs-4 mb-1">
            Название товара
          </h2>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#eeeeee" class="bi bi-heart-fill" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
          </svg>
      </div>
      <p class="text-success fw-medium mb-3" style="font-size: 10px;">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
         <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
        </svg>
        В наличии N шт.
      </p>
      
      <div class="d-flex gap-2 mb-3 lh-1">
        <p class="fs-3 m-0"><strong>8 500 Р.</strong></p>
        <p class="text-danger small m-0 pt-1" style="font-size: 10px;"><strong><del>12 200 Р.</del></strong></p>
      </div>
      <div class="d-flex mb-2">
            {% for i in 1..4 %}
            <div class="form-check">
            {% set random_color = ["f2f0f0", "ffe4d7", "ffd7e4", "ffe4e4", "f2f0e4"][random(0, 4)] %}
                <input class="form-check-input" type="radio" name="flexRadioDisabled" id="flexRadio{{ i }}" aria-label="Выбор цвета" style="width:16px; height:16px; background-color:#{{random_color}};">
                <label class="form-check-label" for="flexRadio{{ i }}"></label>
            </div>
            {% endfor %}
      </div>
      <hr class="mt-0 mb-3">
      <h3 class="fw-bold mb-3" style="font-size: 14px;">
        Основные характеристики
      </h3>
      <div class="row">
        <div class="col-7 small fw-medium" >
          <p class="mb-1">
            Размер (Ш x В x Г)
          </p>
          <p class="mb-1">
            Материал
          </p>
          <p class="mb-0">
            Цвет
          </p>
        </div>
        <div class="col small">
          <p  class="mb-1">
            129 х 210 х 28 см
          </p>
          <p class="mb-1">
            ЛДСП, ХДФ
          </p>
          <p class="mb-0">
            Графит
          </p>
        </div>
      </div>
      <hr>
      <div class="mb-2 text-center"> 
          <button class="col-12 btn btn-dark fw-medium mb-1">
            Купить
          </button>
          <button class="btn text-decoration-underline " style="font-size: 12px;">
            Купить в 1 клик
          </button>
      </div>
      <div class="bg-light p-3 rounded-4">
        <p class="fw-bold d-flex align-items-center gap-4 mb-1">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bus-front" viewBox="0 0 16 16">
