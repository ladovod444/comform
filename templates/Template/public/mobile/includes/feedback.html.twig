<section class="container py-3 ">

{#  <div class="bg-light d-flex row gx-0 px-4 py-3 rounded-4" >#}

  {{ form_start(form, {
    'attr': {
      'class': 'bg-light d-flex row gx-0 px-4 py-3 rounded-4'
    }
  }) }}

  <div class="col-12">
    <h2 class="fs-4">
      Свяжитесь с нами
    </h2>
    <p class="small">
      Заполните форму и наш менеджер <br> свяжется с Вами в течении 15 минут
    </p>
  </div>

{#  <div class="col-2"></div>#}


  <div class="col-12 d-flex flex-column justify-content-between gap-3">


    {{ form_widget(form.name, { attr: {
      'placeholder' : 'Ваше имя',
      'aria-label': 'Поле для ввода имени',
      'style': 'height: 35px; font-size:11px;'

    } }) }}

    {{ form_widget(form.phone, { attr: {
      'placeholder' : 'Контактный телефон',
      'aria-label': 'Поле для ввода телефона',
      'style': 'height: 35px; font-size:11px;'
    } }) }}



    {{ form_widget(form.message, { attr: {
      'placeholder': 'Сообщение',
      'aria-label': 'Поле для ввода сообщения',
      'style': 'height: 35px; font-size:11px;'
    } }) }}


  <div class="d-flex flex-column justify-content-between text-center text-secondary ">

    {% if form.code is defined %}
      {# Капча #}
      <div class="d-flex gap-3 align-items-center mb-3">
        <div class="w-50 lazy bg-contain" data-bg="/captcha/image" style="height: 75px;">
        </div>
        <div class="w-50">{{ form_widget(form.code, { label: false, attr: { autocomplete : 'off', placeholder: 'Проверочный код' }  }) }}
        </div>
      </div>
    {% endif %}

    {{ form_widget(form.support_feedback) }}

    <span class="mt-3" style="font-size:10px;"> * Нажимая кнопку «отправить», <br> Вы соглашаетесь с условиями <br>
                <a href="{{ path('auth-email:user.agree.terms') }}" class="text-secondary">
                    пользовательского соглашения
                </a>
        </span>
  </div>

  </div>

  {{ form_end(form) }}

{#  </div>#}

</section>



