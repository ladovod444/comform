<section class="container py-5 ">
  {{ form_start(form) }}

  <div class="col-3">
    <h2 class="h5">
      Свяжитесь с нами
    </h2>
    <p>
      Заполните форму и наш менеджер свяжется с Вами в течении 15 минут
    </p>
  </div>

  <div class="col-2"></div>

  <div class="col-2 d-flex flex-column justify-content-between">
    {{ form_widget(form.name, { attr: {
      'placeholder' : 'Ваше имя',
      'aria-label': 'Поле для ввода имени'
    } }) }}

    {{ form_widget(form.phone, { attr: {
      'placeholder' : 'Контактный телефон',
      'aria-label': 'Поле для ввода телефона'
    } }) }}
  </div>

  <div class="col-3 d-flex">
    {{ form_widget(form.message, { attr: {
      'placeholder': 'Сообщение',
      'aria-label': 'Поле для ввода сообщения',
    } }) }}
  </div>

{#  {{ dd(form.code) }}#}

  <div class="col-2 d-flex flex-column justify-content-between text-center text-secondary">

    {% if form.code is defined %}
      {# Капча #}
      <div class="d-flex gap-3 align-items-center">
        <div class="w-50 lazy bg-contain" data-bg="/captcha/image" style="height: 75px;">
        </div>
        <div class="w-50">{{ form_widget(form.code, { label: false, attr: { autocomplete : 'off', placeholder: 'Проверочный код' }  }) }}
        </div>
      </div>
    {% endif %}

    {{ form_widget(form.support_feedback) }}

    <span style="font-size:10px;"> * Нажимая кнопку «отправить», <br> Вы соглашаетесь с условиями <br>
                <a href="{{ path('auth-email:user.agree.terms') }}" class="text-secondary">
                    пользовательского соглашения
                </a>
        </span>
  </div>
  {{ form_end(form) }}
</section>





