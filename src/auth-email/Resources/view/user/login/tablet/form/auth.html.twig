{{ form_start(form,
    { attr:
        { 'class': 'd-flex flex-column align-items-center gap-3 px-4' }
    }) }}

<div class="form-group w-100 ">

	{{ form_label(form.email, 'E-mail:',
        {'label_attr': {
            'class': 'mb-2 ms-2 fw-medium fs-12'}
        }) }}

	{{ form_widget(form.email, {
        attr: {
            'class': 'form-control rounded-5'
        }}) }}

</div>

<div class="form-group w-100">

	{{ form_label(form.password, 'Пароль*:',
        {'label_attr': {
            'class': 'mb-2 ms-2 fw-medium fs-12'}
        }) }}

	{{ form_widget(form.password, {
        attr: { class: 'form-control rounded-5' } }) }}

</div>

<div class="modal-footer justify-content-between border-0 px-0 w-100 flex-nowrap gap-4">

    {% if modal is defined %}
        <a class="btn shadow m-0 rounded-5 w-100 fw-medium" data-href="{{ path('auth-email:user.registration') }}" data-bs-target="#modal">

            Регистрация
        </a>
    {% endif %}

	{{ form_widget(form.login,
    {
        label: 'Войти',
        attr: { class: 'btn btn-primary rounded-5 py-2 fw-bold w-100 '}}
	) }}

</div>

{% if constant('BaksDev\\Auth\\Telegram\\BaksDevAuthTelegramBundle::PATH') is defined %}
	<a class="btn icon shadow m-0 rounded-5  fw-medium" data-href="{{ path('auth-telegram:user.auth') }}" data-bs-target="#modal">
		<img src="/assets/white-sign/img/telegram.svg" alt="telegram">
	</a>
{% endif %}

{{ form_end(form) }}
