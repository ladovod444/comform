{% trans_default_domain 'user.account' %}

{# {{ form_row(form.offer.vars.prototype.translate.vars.name) }} #}


<div class="d-flex gap-2">

    <div class="d-flex flex-column w-50 mb-5">


        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">

                <div class="card-title">
                    <h4>
                        {# Основные настройки раздела  #}
                        {{ 'Основные настройки'|trans }}
                    </h4>
                </div>
            </div>


            <div class="card-body text-start pb-0">

                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">@</span>
                    {{ form_widget(form.email) }}
                    {# <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1"> #}
                </div>

                <div class="text-muted small">
                    При изменении e-mail, на указанный Вами новый будет выслано уведомление для подтверждения
                </div>

            </div>
        </div>

    </div>


    <div class="d-flex flex-column w-50">


        <div class="card w-100 border-light">

            <div class="card-header border-light bg-body">

                <div class="card-title">
                    <h4>
                        {# Пароль для авторизации  #}
                        {{ 'Пароль для авторизации'|trans }}
                    </h4>
                </div>
            </div>


            <div class="card-body">


                {% for password in form.passwordPlain %}

                    {% if form.vars.data.getEvent() %}
                        {% set label_pass = 'user.form.password.label.'~password.vars.name %}
                    {% else %}
                        {% set label_pass = 'user.form.password.new.'~password.vars.name %}
                    {% endif %}

                    <div class="mb-2" data-password-meter="true">

                        {{ form_label(password, label_pass|trans) }}

                        {{ form_widget(password, { label: label_pass|trans, attr: { autocomplete : "off" } }) }}

                        <div class="position-relative">

									<span class="btn btn-link text-dark position-absolute end-0 bottom-0"
                                          data-password-meter-control="visibility">

                                        <i class="bi bi-eye-slash">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                                                 fill="currentColor"
                                                 class="bi bi-eye-slash" viewBox="0 0 16 16">
                                                <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7.028 7.028 0 0 0-2.79.588l.77.771A5.944 5.944 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.134 13.134 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755-.165.165-.337.328-.517.486l.708.709z"/>
                                                <path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829l.822.822zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829z"/>
                                                <path d="M3.35 5.47c-.18.16-.353.322-.518.487A13.134 13.134 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7.029 7.029 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12-.708.708z"/>
                                            </svg>
                                        </i>

                                        <i class="bi bi-eye d-none">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                                                 fill="currentColor"
                                                 class="bi bi-eye" viewBox="0 0 16 16">
                                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                                            </svg>
                                        </i>

								</span>

                            {% if loop.first %}


                                <span class="btn btn-link text-dark position-absolute end-0 bottom-0 me-4"
                                      data-password-meter-generator="true"
                                      role="tooltip"
                                      data-bs-toggle="tooltip"
                                      data-bs-placement="bottom"
                                      data-bs-delay='{"show":600,"hide":100}'
                                      title="Сгенерировать пароль"
                                >
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 25 25" width="25"
                                         height="20">
                                    <g stroke="currentColor" stroke-width="1.2">
                                        <path d="m9 5.30423c-2.66424 1.2983-4.5 4.03265-4.5 7.19577 0 4.4183 3.58172 8 8 8 4.4183 0 8-3.5817 8-8 0-4.41828-3.5817-8-8-8v10"></path>
                                        <path d="m16 11-3.5 3.5-3.5-3.5"></path>
                                    </g>
                                </svg>
                                </span>
                            {% endif %}

                        </div>

                        {{ form_errors(password) }}

                        {% if loop.first %}
                            <div class="d-flex justify-content-between gap-1 align-items-center mb-3 mt-2"
                                 data-password-meter-control="highlight">
                                <div class="w-100 bg-danger rounded opacity-75" style="height: 3px"></div>
                                <div class="w-100 bg-light rounded opacity-75" style="height: 3px"></div>
                                <div class="w-100 bg-light rounded opacity-75" style="height: 3px"></div>
                                <div class="w-100 bg-light rounded opacity-75" style="height: 3px"></div>
                                <div class="w-100 bg-light rounded opacity-75" style="height: 3px"></div>

                            </div>
                        {% endif %}
                    </div>
                {% endfor %}

                <div class="text-muted small">
                    Оставьте поле пустым, если пароль не требуется изменять. Используйте 8 или более символов.
                    Рекомендуется сочетать буквы в разном регистре, цифры и символы.
                </div>

            </div>
        </div>

    </div>
</div>








