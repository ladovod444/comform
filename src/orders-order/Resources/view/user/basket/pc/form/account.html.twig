{% trans_default_domain('user.reg') %}

{# Авторизация #}


<h5>Данные авторизации</h5>


<div class="alert alert-secondary opacity-50 lh-1 small rounded-3 p-2" role="alert">
    После оформления заказа обязательно подтвердите указанный адрес электронной почты для авторизации! В противном
    случае заказ не будет обработан менеджерами и не будет отправлен по месту доставки.
</div>

<div class="d-flex justify-content-between">
    <div class="w-50">
        {{ form_label(form.usr.userAccount.email,  'user.form.label.email'|trans ) }}
    </div>
    <div class="w-50">
        {{ form_widget(form.usr.userAccount.email, { attr: { class : 'rounded-3' } }) }}
    </div>
</div>


<div class="d-flex justify-content-between">
    <div class="w-50">
        {{ form_label(form.usr.userAccount.passwordPlain, 'user.form.label.password'|trans) }}
    </div>
    <div class="w-50">
        {{ form_widget(form.usr.userAccount.passwordPlain, { attr: { class : 'rounded-3' } }) }}

        <div class="small"><span class="small text-muted">{{ 'user.form.help.password'|trans }}</span></div>

    </div>
</div>
